<div class="container">
  <h1>Welcome to Mister Cocktail</h1>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail.id) %></li>
    <% end %>
  </ul>
  <%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
</div>



